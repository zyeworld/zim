{
  "name": "zim",
  "displayName": "zim",
  "description": "Invasive keybinds for visual editing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "keybindings": [
      {
        "key": "CapsLock",
        "command": "zim.enterNormalMode",
        "when": "editorTextFocus && !inDebugRepl && zim.currEditMode != 'normal'"
      },
      {
        "key": "CapsLock",
        "command": "zim.enterInsertMode",
        "when": "editorTextFocus && !inDebugRepl && zim.currEditMode == 'normal'"
      },
      {
        "key": "i",
        "command": "zim.moveCursorUp",
        "when": "editorTextFocus && !inDebugRepl && zim.currEditMode == 'normal'"
      },
      {
        "key": "k",
        "command": "zim.moveCursorDown",
        "when": "editorTextFocus && !inDebugRepl && zim.currEditMode == 'normal'"
      },
      {
        "key": "j",
        "command": "zim.moveCursorLeft",
        "when": "editorTextFocus && !inDebugRepl && zim.currEditMode == 'normal'"
      },
      {
        "key": "l",
        "command": "zim.moveCursorRight",
        "when": "editorTextFocus && !inDebugRepl && zim.currEditMode == 'normal'"
      },
      {
        "key": "Escape",
        "command": "notebook.cell.quitEdit",
        "when": "inputFocus && notebookEditorFocused && !editorHasSelection && !editorHoverVisible"
      }
    ],
    "configuration":[
      {
        "title": "Zim",
        "type": "object",
        "properties": {}
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
